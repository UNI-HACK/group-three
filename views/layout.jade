doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    meta(name='theme-color', content='#1976d2')
    title Uni-Hack
    link(href='/min/plugin-min.css', type='text/css', rel='stylesheet')
    link(href='/min/custom-min.css', type='text/css', rel='stylesheet')
    link(href='/css/style.css', type='text/css', rel='stylesheet')
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
  body#top.scrollspy
    // Pre Loader
    #loader-wrapper
      #loader
      .loader-section.section-left
      .loader-section.section-right
    // Navigation
    .navbar-fixed
      nav#nav_f.default_color(role='navigation')
        .container
          .nav-wrapper
            a#logo-container.brand-logo(href='/') Uni-Hack
            ul.right.hide-on-med-and-down
              li
                a(href='/login') Login
              li
                a(href='/products') Products              
            ul#nav-mobile.side-nav              
              li
                a(href='/login') Login
              li
                a(href='/products') Products              
            a.button-collapse(href='#', data-activates='nav-mobile')
              i.mdi-navigation-menu
    //content
    block content

    // Footer
    footer#contact.page-footer.scrollspy
      .container
        .row
          .col.l6.m12.s12
            form.col.s12(action='contact.php', method='post')
              .row
                .input-field.col.s12
                  i.mdi-action-account-circle.prefix.white-text
                  input#icon_prefix.validate.white-text(name='name', type='text')
                  label.white-text(for='icon_prefix') Your name
                .input-field.col.s12
                  i.mdi-communication-email.prefix.white-text
                  input#icon_email.validate.white-text(name='email', type='email')
                  label.white-text(for='icon_email') Your Email
                .input-field.col.s12
                  i.mdi-editor-mode-edit.prefix.white-text
                  textarea#icon_prefix2.materialize-textarea.white-text(name='message')
                  label.white-text(for='icon_prefix2') Write a message
                .col.offset-s7.s5
                  button.btn.waves-effect.waves-light.red.darken-1(type='submit')
                    | Send
                    i.mdi-content-send.right.white-text
          .col.l3.m6.s12
            h5.white-text About us
            ul
              li
                a.white-text(href='#') Our company
              li
                a.white-text(href='#') Meet the team
              li
                a.white-text(href='#') Blog
            h5.white-text Find us
            ul
              li
                a.white-text(href='#')
                  i.small.fa.fa-facebook-square.white-text
                  |  Facebook
              li
                a.white-text(href='#')
                  i.small.fa.fa-linkedin-square.white-text
                  |  Linkedin
          .col.l3.m6.s12
            h5.white-text Download our Apps
            ul
              li
                a(href='#')
                  img.goole(src='/img/google_play.png' alt='google play') 
              li
                a(href='#')
                  img.ios(src='/img/ios_store.png' alt='ios app store')                        
      .footer-copyright
        .container
          | Powered by 
          a.white-text(href='#') ExpressJS and MongoDB
  script(src='/min/plugin-min.js')
  script(src='/min/custom-min.js')